<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLite.MainPage">

    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Label
                x:Name="wierszeLbl"
                Text=""
                HorizontalOptions="Center"/>

            <Image
                x:Name="pojazdImg"
                Source="a1.png"
                WidthRequest="300"/>
            
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Button
                    x:Name="poprzedniBtn"
                    Text="Poprzedni"
                    Clicked="OnPoprzedniClicked"/>
                <Button
                    x:Name="wybranyBtn"
                    Text="Wyświetl wybrany"
                    Clicked="OnWybranyClicked"/>
                <Button
                    x:Name="usunBtn"
                    Text="Usuń wybrany"
                    Clicked="OnUsunClicked"/>
                <Button
                    x:Name="nastepnyBtn"
                    Text="Następny"
                    Clicked="OnNastepnyClicked"/>


            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
